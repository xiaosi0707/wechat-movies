body {
  background: #D2D3D2;
}
.search {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #F2F2F2;
}
.search icon {
  margin: 20rpx 0 0 24rpx;
}
.search input {
  width: 90%;
  height: 100%;
  float: right;
}
.movie-main {
  width: 100%;
  background: white;
  overflow: hidden;
  margin-bottom: 24rpx;
  padding-bottom: 12rpx;
}
.movie-header {
  width: 95%;
  margin: 12rpx auto;
  height: 36rpx;
  line-height: 36rpx;
}
.movie-header text {
  font-size: 27rpx;
  color: #666666;
}
.movie-header text:last-child {
  float: right;
  color: #1F4BA5;
}
.movie-body {
  width: 95%;
  margin: 0 auto;
}
.movie-body-info {
  width: 210rpx;
  float: left;
  margin: 20rpx 40rpx 0 0;
}
.movie-body-info:last-child {
  margin-right: 0;
}
.movie-body-info image {
  width: 100%;
  height: 300rpx
}
.movie-body-info text {
  display: block;
  font-size: 27rpx;
  color: #8A8A8A;
  width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
