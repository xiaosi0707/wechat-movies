@import "../templates/movie-list/movie-list.wxss";
body {
  background: #D2D3D2;
}
.search {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #F2F2F2;
}
.search icon {
  margin: 20rpx 0 0 24rpx;
}
.search input {
  width: 90%;
  height: 100%;
  float: right;
}
.search image {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  width: 24rpx;
  height: 24rpx;
}
.movie-main {
  width: 100%;
  background: white;
  overflow: hidden;
  margin-bottom: 24rpx;
  padding-bottom: 12rpx;
}
.search-pannel {
  position: absolute;
  top: 80rpx;
}

